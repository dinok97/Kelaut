<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_promotion"
                android:layout_width="450dp"
                android:layout_height="140dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/promotion"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/banner" />

            <TextView
                android:id="@+id/tv_promotion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotion_title"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold" />

            <TextView
                android:id="@+id/tv_promotion_short_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/promotion_desc"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>